
<div class="col-md-8 col-centered">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3>Edit a job</h3>
      </div>
      <div class="panel-body">
        <%= simple_form_for [:admin, @job ] do |f| %>

        <%= f.input :title %>
        <%= f.input :wage_upper_bound, :label => "薪资待遇" %>
        <%= f.input :description %>

        <%= f.input :contact_email %>
        <%= f.input :is_hidden %>

          <%= f.submit "Submit" %>
        <% end %>
      </div>
    </div>
</div>
